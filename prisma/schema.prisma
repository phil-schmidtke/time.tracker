// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{
    ID Int @id @default(autoincrement())
    Username String @unique
    Mail String 
    Password String
}

model TrackedTimes {
  ID Int @id @default(autoincrement())
  UserID Int
  CategoryName Int
  StartTime DateTime
  EndTime DateTime
  Name String?
  Description String?
  flagPause Boolean
}

model Categories{
  ID Int @id @default(autoincrement())
  UserID Int 
  CategoryName String
  Description String?
}

model PauseTrackedTimes{
  ID Int @id @default(autoincrement())
  TrackedTimesID Int
  StartTime DateTime
  EndTime DateTime
}